{{#section 'title'}}Sửa bài {{this.post.PostTitle}} - {{/section}}
{{#section 'js'}}
<script src="https://cdn.tiny.cloud/1/nqsoj71qx22t3rxse0ny3k123bidvew4f6awk5ruf30k8xny/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script>
tinymce.init({
    selector: '#txtContent',
    height: 450,
    plugins: 'paste image link autolink lists table media',
    menubar: false,
    toolbar: [
        'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media',
    ],
});
</script>

{{/section}}


    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/posts/cat/{{this.post.CID}}">{{this.post.CName}}</a></li>
            <li class="breadcrumb-item"><a href="/admin/posts/subcat/{{this.post.SCID}}">{{this.post.SCName}}</a></li>
            <li class="breadcrumb-item active" aria-current="page">Viết bài</li>
        </ol>
    </nav>
    <div class="card">
    <div class="card-body">
         <form method="post">
            <div class="form-group">
                <label for="txtPostID">#</label>
                <input type="text" class="form-control" id="txtPostID" name="PostID" readonly value="{{this.post.PostID}}">
            </div>
            <div class="form-group">
                <label for="txtPostTitle">Tiêu đề</label>
                <input type="text" id="txtPostTitle" name="PostTitle" class="form-control" value="{{this.post.PostTitle}}">
            </div>
            
            <div class="form-group">
                <label for="txtSumContent">Nội dung tóm tắt</label>
                <input type="text" id="txtSumContent" name="SumContent" class="form-control" value="{{this.post.SumContent}}">
            </div>
            <div class="form-group">
                <textarea name="Content" id="txtContent" class="form-control" cols="30" rows="10">{{this.post.Content}}</textarea>
            </div>
            <div class="form-group">
                <label for="txtSource">Nguồn</label>
                <input  value="{{this.post.source}}" type="text" id="txtSource" name="source" class="form-control">
            </div>
            <div class="form-group">
                <label for="txtLinkSource">Link nguồn</label>
                <input type="text"  value="{{this.post.linksource}}" id="txtLinkSource" name="linksource" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg btn-block" formaction="/admin/posts/update">
                <i class="fa fa-check" aria-hidden="true"></i>
                Lưu
                </button>           
            </div>
         </form>
     </div>
 </div>